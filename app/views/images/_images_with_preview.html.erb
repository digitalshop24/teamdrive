<% if object.image_file_name %>
  <div class="image-view preview">
    <%= image_tag(object.image.url(:thumb)) %>
    <p align="center">
      <strong>ПРЕВЬЮ</strong>
    </p>
  </div>
<% end %>
<% if object.images %>
  <% object.images.each do |image| %>
    <div class="image-view" id="<%= image.id %>">
      <%= link_to(image.image.url, target: '_blank') do %>
        <%= image_tag(image.image.url(:thumb)) %>
      <% end %>
      <% if page == 'edit' %>
        <p align="center">
          <%= link_to "Превью", preview_image_path(id: image.id, object_type: object.class.name, object_id: object.id), remote: true, data: {confirm: 'Сделать это изображение превью?'} %>
          <%= link_to "Удалить", destroy_image_path(id: image.id), method: :delete, remote: true, data: {confirm: 'Вы уверены?'} %>
        </p>
      <% end %>
    </div>
  <% end %>
<% end %>
